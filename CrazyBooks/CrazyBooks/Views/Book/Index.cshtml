<div class="container p-3 DivBgForm text-light" >
  <div class="row pt-4">
    <div class="col-10">
      <h1 class="text-primary">Books</h1>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="Book" asp-action="Create" class="btn btn-success">
        Create New Subject
      </a>
    </div>
  </div>

  <br /><br />
    <table class="table table-bordered border-dark text-light" style="width:100%">
    <thead class="bg-primary">
      <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="border-dark">
      @foreach (var item in this.ViewBag.MaListe)
      {
        <tr>
          <td width="50%">@item.Title</td>
          <td width="20%">@item.ISBN</td>
          <td class="text-center">
            <div class="w-75 btn-group" role="group">
              <a class="btn btn-warning mx-2">
                Edit
              </a>
              <a class="btn btn-danger mx-2">
                Delete
              </a>
            </div>
          </td>
        </tr>
      }

    </tbody>
  </table>
</div>
