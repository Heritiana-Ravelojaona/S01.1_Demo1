@model CrazyBooks.Models.Book
<div class="border p-3 DivBgForm text-light">
    <form class="form-horizontal" method="post" asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h1 class="text-primary pl-3">Create a Book</h1>
            <hr />
        </div>

        <div class="col-8  pt-4">
            <div class="form-group row p-2">
                <div class="col-2">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Title" class="form-control" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-2">
                <div class="col-2">
                    <label asp-for="@Model.ISBN"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.ISBN" class="form-control" />
                    <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-2">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Create" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Back to list</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
  }